<div class="form-row">
    <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" value="<%= category.name %>">
    </div>
    <div class="form-item">
        <label>Creation date</label>
        <input type="date" name="createdAt"
            value="<%= category.createdAt == null ? '' : category.createdAt.toISOString().split('T')[0] %>">
    </div>
</div>