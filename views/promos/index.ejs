<div class="content-header-block">
    <h2>Promos</h2>
    <form action="/promos" method="GET">
        <div class="form-row form-row-bundle">
            <div class="form-item">
                <input type="text" placeholder="enter a promo name" name="name" value="<%= searchOptions.name %>">
            </div>
            <button class="btn btn-secondary" type="submit">Search</button>
        </div>
    </form>
</div>
<div class="content-block">
    <% promos.forEach(promo => { %>
    <div class="content-block-row">
        <div>
            <div class="content-block-main-label"><%= promo.name %></div>
            <div class="date-caption"><%= promo.createdAt.toISOString().split('T')[0] %></div>
        </div>
        <div class="btn-row">
            <a class="btn btn-primary" href="/promos/<%= promo.id %>/edit">edit</a>
            <%- include('../partials/deleteForm', 
                    { url: `/promos/${promo.id}` }) %>
        </div>
    </div>
    <% }); %>
</div>
<div class="new-item">
    <a href="/promos/new">
        <i class="fas fa-plus-circle"></i> add a promo
    </a>
</div>
